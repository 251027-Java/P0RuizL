<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "http://hibernate.org/dtd/hibernate-configuration-5.3.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/fantasydb</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">mysecretpassword</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Let Hibernate create tables if they don't exist using script -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- <property name="hibernate.hbm2ddl.import_files">schema.sql</property> -->


        <!-- Show SQL in console -->
        <property name="hibernate.show_sql">true</property>

        <!-- Automatically format SQL output -->
        <property name="hibernate.format_sql">true</property>

        <!-- List of annotated entities -->
        <mapping class="com.fantasy.Model.Player"/>
        <mapping class="com.fantasy.Model.SystemMetadata">
        <mapping class="com.fantasy.Model.User"/> 
        <mapping class="com.fantasy.Model.League"/>
        <mapping class="com.fantasy.Model.Draft"/>
        <mapping class="com.fantasy.Model.PlayerPosition"/>
        <!-- etc -->
    </session-factory>
</hibernate-configuration>
